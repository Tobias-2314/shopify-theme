{% schema %}
{
  "name": "Hero Split React",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Tecnolog√≠a Premium Al Mejor Precio"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Subheading",
      "default": "Eleva tu experiencia con tecnolog√≠a de vanguardia. Dise√±o elegante, calidad superior y resultados garantizados."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Ver Ofertas"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Product Image"
    },
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge Text",
      "default": "-37% HOY"
    },
    {
      "type": "header",
      "content": "Floating Stats"
    },
    {
      "type": "checkbox",
      "id": "show_stats",
      "label": "Show Floating Stats",
      "default": true
    },
    {
      "type": "text",
      "id": "stat_rating",
      "label": "Rating Score",
      "default": "4.9/5"
    },
    {
      "type": "text",
      "id": "stat_reviews",
      "label": "Reviews Text",
      "default": "10k+ reviews"
    },
    {
      "type": "text",
      "id": "stat_conversion",
      "label": "Conversion Stat",
      "default": "+50% AOV"
    },
    {
      "type": "text",
      "id": "stat_label",
      "label": "stat_label",
      "default": "Conversi√≥n"
    }
  ],
  "presets": [
    {
      "name": "Hero Split React"
    }
  ]
}
{% endschema %}

<section class="hero-section">
  <div class="container">
    <div class="hero-grid">
      <!-- Left Column: Image -->
      <div class="relative order-2 lg:order-1">
        <!-- Badge -->
        <div class="absolute" style="top: -1rem; left: -1rem; z-index: 10;">
          <span style="background-color: var(--color-red-600); color: white; padding: 0.5rem 1rem; border-radius: 9999px; font-weight: bold; font-size: 0.875rem; box-shadow: var(--shadow-lg);">
            -37% HOY
          </span>
        </div>

        <!-- Main Image -->
        <div style="border-radius: var(--radius-3xl); overflow: hidden; box-shadow: var(--shadow-2xl);">
          {% if section.settings.image %}
            {{ section.settings.image | image_url: width: 1000 | image_tag: class: 'w-full h-auto', loading: 'eager' }}
          {% else %}
            <img
              src="https://images.unsplash.com/photo-1676914333302-53615f404416?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&q=80&w=1080"
              alt="Producto Premium"
              class="w-full h-auto"
            >
          {% endif %}
        </div>

        <!-- Floating Stats (kept hardcoded for visual fidelity as requested) -->
        <div class="floating-stats">
          <div class="flex items-center gap-2">
            <svg
              class="w-5 h-5"
              style="color: var(--color-yellow-400); fill: var(--color-yellow-400); width: 1.25rem;"
              viewBox="0 0 24 24"
            >
              <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
            </svg>
            <div>
              <p class="font-bold leading-tight">4.9/5</p>
              <p class="text-xs text-gray-500 leading-tight">10k+ reviews</p>
            </div>
          </div>
          <div style="width: 1px; height: 2rem; background: var(--color-gray-200);"></div>
          <div class="flex items-center gap-2">
            <svg
              class="w-5 h-5"
              style="color: var(--color-green-600); width: 1.25rem;"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
            </svg>
            <div>
              <p class="font-bold leading-tight">+50% AOV</p>
              <p class="text-xs text-gray-500 leading-tight">Conversi√≥n</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Right Column: Info & Selector -->
      <div class="order-1 lg:order-2">
        <div class="mb-6">
          <span class="inline-block bg-black text-white px-4 py-2 rounded-full text-sm font-bold mb-4">
            üî• BESTSELLER 2026
          </span>

          <h1 class="text-4xl font-bold mb-4 leading-tight" style="font-size: 2.5rem; line-height: 1.1;">
            {{ section.settings.heading }}
          </h1>

          <p class="text-lg text-gray-600 mb-6" style="font-size: 1.125rem;">
            {{ section.settings.text }}
          </p>

          <!-- Trust Indicators -->
          <div class="flex flex-wrap gap-4 mb-8">
            <div class="flex items-center gap-2 text-sm">
              <div
                class="w-2 h-2 rounded-full"
                style="background: var(--color-green-500); width: 0.5rem; height: 0.5rem;"
              ></div>
              <span class="font-medium">En Stock</span>
            </div>
            <div class="flex items-center gap-2 text-sm">
              <div
                class="w-2 h-2 rounded-full"
                style="background: var(--color-blue-600); width: 0.5rem; height: 0.5rem;"
              ></div>
              <span class="font-medium">Env√≠o 24-48h</span>
            </div>
            <div class="flex items-center gap-2 text-sm">
              <div class="w-2 h-2 rounded-full" style="background: #A855F7; width: 0.5rem; height: 0.5rem;"></div>
              <span class="font-medium">+500 vendidos hoy</span>
            </div>
          </div>
        </div>

        <!-- Render Bundle Selector Snippet or Section -->
        {% section 'bundle-selector' %}
      </div>
    </div>
  </div>
</section>
