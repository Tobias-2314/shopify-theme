{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo Text",
      "default": "SILKIFY"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu",
      "default": "main-menu"
    }
  ]
}
{% endschema %}

<header
  class="site-header fixed w-full top-0 z-50 bg-white/80 backdrop-blur-md border-b border-gray-100 transition-all duration-300"
  id="SiteHeader"
>
  <div class="container h-16 flex items-center justify-between">
    <!-- Logo & Mobile Menu Toggle -->
    <div class="flex items-center gap-4">
      <button class="md:hidden p-2">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>
      <a href="/" class="text-2xl font-bold tracking-tight">{{ section.settings.logo_text }}</a>
    </div>

    <!-- Desktop Nav (Optional) -->
    <nav class="hidden md:flex gap-6">
      <!-- Links could go here -->
    </nav>

    <!-- Right Actions -->
    <div class="flex items-center gap-4">
      <a href="/cart" class="relative p-2">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
        </svg>
        {% if cart.item_count > 0 %}
          <span class="absolute top-0 right-0 bg-red-600 text-white text-xs w-5 h-5 flex items-center justify-center rounded-full">
            {{ cart.item_count }}
          </span>
        {% endif %}
      </a>
    </div>
  </div>
</header>

<script>
  window.addEventListener('scroll', () => {
    const header = document.getElementById('SiteHeader');
    if (window.scrollY > 20) {
      header.classList.add('shadow-md', 'bg-white');
      header.classList.remove('bg-white/80');
    } else {
      header.classList.remove('shadow-md', 'bg-white');
      header.classList.add('bg-white/80');
    }
  });
</script>

<style>
  /* Fix header spacing */
  body {
    padding-top: 2.5rem;
  } /* Space for scrolling ticker */
  main {
    margin-top: 4rem;
  } /* Space for header */
</style>
